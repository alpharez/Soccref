<h1>Listing phones</h1>

<table class="table">
  <tr>
    <th>Number</th>
    <th>Type</th>
    <th>Referee</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @phones.each do |phone| %>
  <tr>
    <td><%= phone.number %></td>
    <td><%= phone.type %></td>
    <td><%= phone.referee_id %></td>
    <td><%= link_to 'Show', phone %></td>
    <td><%= link_to 'Edit', edit_phone_path(phone) %></td>
    <td><%= link_to 'Destroy', phone, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

